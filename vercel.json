{
	"version": 2,
	"public": true,
	"name": "cuentoneta",
	"installCommand": "pnpm install",
	"devCommand": "pnpm run dev",
	"rewrites": [{ "source": "/(.*)", "destination": "/api" }],
	"functions": {
		"api/index.mjs": {
			"includeFiles": "dist/cuentoneta/**"
		}
	},
	"crons": [
		{
			"name": "most-read",
			"path": "/api/story/most-read",
			"schedule": "30 22 * * *"
		}
	]
}
